<layout>
    <default>
	<reference name="head">
	<action method="settitle"><title>Add a Payment Method</title></action>
	</reference>
    </default>
    <authnet_index_index>
        <reference name="content">
            <block type="authnet/profiles" name="authnet" template="authnet/profiles/profiles.phtml" />
        </reference>
    </authnet_index_index>
	<authnet_customer_profiles>
        <reference name="content">
            <block type="authnet/profiles" name="customer_authnet" template="authnet/profiles/profiles.phtml"/>
        </reference>
    </authnet_customer_profiles>
	<customer_account>
        <reference name="customer_account_navigation">
            <action method="addLink" translate="label" module="authnet" ifconfig="payment/authorizenet/cim"><name>profiles</name><path>authnet/customer/profiles/</path><label>Add a Payment Method</label></action>
        </reference>
    </customer_account>
</layout> 
<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="box-collateral box-up-sell">
    <h2><?php echo $this->__('Complement your purchase...') ?></h2>
    <div class="up-sell-arrow"><img src="<?php echo $this->getSkinUrl('images/blue-arrow_03.png'); ?>"></div>
    <ul class="products-grid" id="upsell-product-table">
    <?php $this->setColumnCount(1); ?>
    <?php $this->resetItemsIterator() ?>
	<?php $cnt=$this->getRowCount(); ?>
	<?php //$_link=$this->getIterableItem(); ?>
    <?php for($_i=0;$_i<$this->getRowCount();$_i++): ?>
        <?php for($_j=0;$_j<$this->getColumnCount();$_j++): ?>
			
             <li class="item<?php if($_i==0): ?> first<?php elseif($_i==$cnt-1): ?> last<?php endif; ?>">    

                <?php if($_link=$this->getIterableItem()): ?>  
                <?php Mage::helper('quicksee')->display($_link); ?>
                <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(125) ?>" width="125" height="125" alt="<?php echo $this->htmlEscape($_link->getName()) ?>" /></a>
	         <p class="brand-name"><?php echo $_link->getAttributeText('bn_brand'); ?></p>	
			 
                 <h2 class="product-name"><a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->htmlEscape($_link->getName()) ?>"><?php echo $this->htmlEscape($_link->getName()) ?></a></h2>
		<p class="sub-desc"><?php echo $_link->getBn_subdesc(); ?></p>
                <?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
                <?php echo $this->getReviewsSummaryHtml($_link) ?>
				</li>
                <?php else: ?>
            <li class="empty">&nbsp;</li>
            <?php endif; ?>
        <?php endfor; ?>           
    <?php endfor; ?>
    </ul>
    <script type="text/javascript">decorateTable('upsell-product-table')</script>
	 <script type="text/javascript">decorateGeneric($$('ul.products-grid'), ['odd','even','first','last'])</script>
</div>
